# Configurações do Servidor
PORT=3000
NODE_ENV=production

# Configurações de JWT para gerar tokens para QRCode
JWT_SECRET=uma_chave_muito_segura_aqui
JWT_EXPIRATION=1y

# Configurações de Segurança CORS
CORS_ORIGINS=https://eventos.fsw-ifc.brdrive.cloud
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
SKIP_RATE_LIMIT=false

# Logging de Segurança
SECURITY_LOGGING=true

# Session Secret (altere para um valor seguro em produção)
SESSION_SECRET=uma_chave_secreta_aqui

# Flags
REGISTRO_PARTICIPACAO_ATIVO=true

# Configurações WebAuthn - PRODUÇÃO
WEBAUTHN_RP_ID=eventos.fsw-ifc.brdrive.cloud
WEBAUTHN_RP_NAME=Semana Acadêmica
WEBAUTHN_ORIGIN=https://eventos.fsw-ifc.brdrive.cloud