    <script>
        const canvas = document.getElementById("particle-canvas");
        const ctx = canvas.getContext("2d");
        const jumbotron = document.querySelector(".jumbotron");

        function resizeCanvas() {
            canvas.width = jumbotron.offsetWidth;
            canvas.height = jumbotron.offsetHeight;
        }
        window.addEventListener("resize", resizeCanvas);
        resizeCanvas();

        const emojis = ["üíª", "üöÄ", "ü§ñ", "üéÆ", "üïπÔ∏è", "üì±", "‚ú®", "üßô‚Äç‚ôÇÔ∏è", "üßù‚Äç‚ôÄÔ∏è", "üßõ", "ü¶∏‚Äç‚ôÇÔ∏è", "ü¶π‚Äç‚ôÄÔ∏è"];

        let particles = Array.from({ length: 20 }, () => ({
            x: Math.random() * canvas.width,
            y: Math.random() * canvas.height,
            dx: (Math.random() - 0.5) * 1.2,
            dy: (Math.random() - 0.5) * 1.2,
            emoji: emojis[Math.floor(Math.random() * emojis.length)],
            size: Math.random() * 14 + 14 // tamanho do emoji
        }));

        function drawParticles() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            particles.forEach(p => {
                ctx.font = `${p.size}px Arial`;
                ctx.fillText(p.emoji, p.x, p.y);

                p.x += p.dx;
                p.y += p.dy;

                if (p.x < 0 || p.x > canvas.width) p.dx *= -1;
                if (p.y < 0 || p.y > canvas.height) p.dy *= -1;
            });
            requestAnimationFrame(drawParticles);
        }
        drawParticles();
    </script>


