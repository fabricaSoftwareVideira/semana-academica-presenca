                <div class="section-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                Programa√ß√£o Completa
            </h2>
            <% if (eventosPorTipo) { %>
                <div class="eventos-grid">
                    <% eventosPorTipo.forEach(tipo=> { %>
                        <div class="evento-card">
                            <div class="evento-tipo">
                                <%= tipo.tipo %>
                            </div>
                            <% if (tipo.eventos.length> 0) { %>
                                <% tipo.eventos.forEach(evento=> { %>
                                    <hr>

                                    <div class="evento-nome">
                                        <%= evento.nome %>
                                    </div>
                                    <p class="detalhe">
                                        <i class="fas fa-calendar"></i>
                                        <span>
                                            <%= new Date(evento.data).toLocaleDateString('pt-BR') %>
                                        </span>
                                    </p>
                                    <p class="detalhe">
                                        <i class="fas fa-clock"></i>
                                        <span>
                                            <%= evento.horario %>
                                        </span>
                                    </p>
                                    <p class="detalhe">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>
                                            <%= evento.local %>
                                        </span>
                                    </p>
                                    <% }) %>
                                        <% } else { %>
