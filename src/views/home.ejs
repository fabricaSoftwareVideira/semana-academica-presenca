<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Dashboard - Semana Acad√™mica Inform√°tica</title>
    <link rel="icon" href="/img/favicon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#4caf50">
</head>

<body>
    <nav>
        <h1>
            <a href="/" class="logo">
                <img src="/img/ifc.webp" alt="Logo" class="logo-img">
                Semana Acad√™mica
            </a>
        </h1>
        <div class="user-info">
            <% if (typeof user !=='undefined' ) { %>
                <span class="username">
                    <%= user.username %>
                </span>
                <a href="/dashboard" class="user-link">
                    <i class="fa fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/auth/logout" class="user-link logout-link">
                    <i class="fa fa-sign-out-alt"></i> Sair
                </a>
                <% } else { %>
                    <a href="/auth/login" class="login-btn">Login</a>
                    <% } %>
        </div>
    </nav>

    <header>
        <div class="jumbotron">
            <div class="tech-pattern"></div>
            <div class="jumbotron-content">
                <div class="course-badge">
                    <i class="fas fa-code"></i> Curso T√©cnico em Inform√°tica Integrado ao Ensino M√©dio
                </div>

                <h1 class="event-title">Semana Acad√™mica 2025</h1>
                <!-- <p class="event-subtitle">IFC <i>Campus Videira</i></p> -->

                <div class="event-info">
                    <div class="info-item">
                        <i class="fas fa-calendar info-icon"></i>
                        <div>
                            <strong>10 a 12 de Novembro</strong>
                            <br><small>2025</small>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-map-marker-alt info-icon"></i>
                        <div>
                            <strong>IFC Videira</strong>
                            <br><small>Campus Videira</small>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-users info-icon"></i>
                        <div>
                            <strong>Inform√°tica</strong>
                            <br><small>Curso T√©cnico</small>
                        </div>
                    </div>
                </div>

                <div class="countdown">
                    <h3><i class="fas fa-clock"></i> Faltam para o evento:</h3>
                    <div class="countdown-timer" id="countdown">
                        <div class="time-unit">
                            <span class="time-value" id="days">--</span>
                            <span class="time-label">Dias</span>
                        </div>
                        <div class="time-unit">
                            <span class="time-value" id="hours">--</span>
                            <span class="time-label">Horas</span>
                        </div>
                        <div class="time-unit">
                            <span class="time-value" id="minutes">--</span>
                            <span class="time-label">Min</span>
                        </div>
                        <div class="time-unit">
                            <span class="time-value" id="seconds">--</span>
                            <span class="time-label">Seg</span>
                        </div>
                    </div>
                </div>

                <a href="/qrcode" class="btn">
                    <i class="fa fa-qrcode"></i>
                    Gerar Meu QR Code
                </a>
            </div>
        </div>
    </header>

    <div class="container">
        <!-- Ranking destacado -->
        <section class="content-section">
            <div class="ranking-highlight">
                <div class="ranking-trophy">üèÜ</div>
                <h2>Primeira Coloca√ß√£o</h2>
                <% if (rankingExistePontuacao) { %>
                    <% if (ranking && ranking.length> 0) { %>
                        <p>A turma <strong>
                                <%= ranking[0].nome %>
                            </strong> est√° em primeiro lugar com <strong>
                                <%= ranking[0].pontosTotal %>
                            </strong> pontos!</p>
                        <a href="/ranking" class="btn" style="margin-top: 15px; animation: none;">Ver Ranking
                            Completo</a>
                        <% } %>
                            <% } else { %>
                                <p>Nenhuma pontua√ß√£o registrada ainda. Participe dos eventos para ganhar pontos!</p>
                                <% } %>
            </div>
        </section>

        <!-- Programa√ß√£o dos eventos -->
        <section class="content-section">
            <h2 class="section-title">
                <div class="section-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                Programa√ß√£o Completa
            </h2>
            <% if (eventosPorTipo) { %>
                <div class="eventos-grid">
                    <% eventosPorTipo.forEach(tipo=> { %>
                        <div class="evento-card">
                            <div class="evento-tipo">
                                <%= tipo.tipo %>
                            </div>
                            <% if (tipo.eventos.length> 0) { %>
                                <% tipo.eventos.forEach(evento=> { %>
                                    <hr>

                                    <div class="evento-nome">
                                        <%= evento.nome %>
                                    </div>
                                    <p class="detalhe">
                                        <i class="fas fa-calendar"></i>
                                        <span>
                                            <%= new Date(evento.data).toLocaleDateString('pt-BR') %>
                                        </span>
                                    </p>
                                    <p class="detalhe">
                                        <i class="fas fa-clock"></i>
                                        <span>
                                            <%= evento.horario %>
                                        </span>
                                    </p>
                                    <p class="detalhe">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>
                                            <%= evento.local %>
                                        </span>
                                    </p>
                                    <% }) %>
                                        <% } else { %>
                                            <p>Nenhum evento dispon√≠vel para este tipo.</p>
                                            <% } %>
                        </div>
                        <% }) %>
                </div>
                <% } else { %>
                    <p>Nenhum evento dispon√≠vel no momento.</p>
                    <% } %>
        </section>
    </div>

    <footer>
        <div class="footer-content">
            <div class="footer-info">
                <h3>Semana Acad√™mica</h3>
                <div class="footer-logo">
                    <img src="/img/favicon.svg" alt="F√°brica de Software">
                    <img src="/img/ifc.webp" alt="IFC Videira">
                </div>
            </div>

            <div class="footer-social">
                <h3>Siga-nos</h3>
                <ul>
                    <li><a href="https://www.instagram.com/fsw.ifcvideira/" target="_blank">
                            <i class="fab fa-instagram"></i>
                        </a></li>
                    <li><a href="mailto:fabricadesoftware.videira@ifc.edu.br" target="_blank">
                            <i class="fa fa-envelope"></i>
                        </a></li>
                </ul>
            </div>
        </div>
    </footer>

    <script>
        // Contador regressivo
        function updateCountdown() {
            const eventDate = new Date('2025-11-10T08:00:00').getTime();
            const now = new Date().getTime();
            const distance = eventDate - now;

            if (distance > 0) {
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = days.toString().padStart(2, '0');
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            } else {
                document.getElementById('countdown').innerHTML = '<h3 style="color: #4caf50;">üéâ O evento come√ßou! üéâ</h3>';
            }
        }

        // Atualizar contador a cada segundo
        setInterval(updateCountdown, 1000);
        updateCountdown();

        // Service Worker (se dispon√≠vel)
        if ("serviceWorker" in navigator) {
            navigator.serviceWorker.register("/service-worker.js")
                .then((reg) => console.log("Service Worker registrado:", reg))
                .catch((err) => console.error("Erro ao registrar Service Worker:", err));
        }
    </script>
</body>

</html>