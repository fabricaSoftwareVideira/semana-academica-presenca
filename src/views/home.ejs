                <ul>
                    <li><a href="https://www.instagram.com/fsw.ifcvideira/" target="_blank">
                            <i class="fab fa-instagram"></i>
                        </a></li>
                    <li><a href="mailto:fabricadesoftware.videira@ifc.edu.br" target="_blank">
                            <i class="fa fa-envelope"></i>
                        </a></li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="/js/countdown.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>