    <div class=" container">
        <!-- Mostrar a turma que est√° em primeiro lugar e um link para acessar o ranking completo -->
        <section class="top-ranking">
            <h2>üèÜ Primeira Coloca√ß√£o</h2>
            <% if (rankingExistePontuacao) { %>
                <% if (ranking && ranking.length> 0) { %>
                    <p>A turma <strong>
                            <%= ranking[0].nome %>
                        </strong> est√° em primeiro lugar com <strong>
                            <%= ranking[0].pontosTotal %>
                        </strong> pontos!</p>
                    <a href="/ranking" class="card-btn">Ver Ranking Completo</a>
                    <% } %>
                        <% } else { %>
