<!-- src/views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Dashboard - Semana Acadêmica</title>
    <link rel="icon" href="/img/favicon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Grid de eventos */
        .evento-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 10px;
            margin-top: 20px;
            margin-bottom: 40px;
        }

        /* Card de evento */
        .evento-card {
            background: #ffffff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s, box-shadow 0.3s;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        /* Título do card */
        .evento-card h3 {
            margin-top: 0;
            color: #333;
            font-size: 1.4rem;
            border-bottom: 2px solid #e6e6e6;
            padding-bottom: 5px;
            margin-bottom: 10px;
        }

        /* Parágrafos do card */
        .evento-card p {
            color: #555;
            line-height: 1.5;
            margin: 5px 0;
            font-size: 0.95rem;
        }

        /* Destaque para labels fortes */
        .evento-card p strong {
            color: #333;
        }

        /* Responsividade adicional */
        @media (max-width: 768px) {
            .evento-grid {
                grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            }

            .page-title {
                font-size: 1.8rem;
            }

            .evento-card h3 {
                font-size: 1.2rem;
            }
        }

        @media (max-width: 480px) {
            .evento-card {
                padding: 15px;
            }
        }
    </style>
</head>

<body>

    <nav>
        <h1>
            <a href="/" class="logo">
                <!-- <img src="/img/ifc.webp" alt="Logo" class="logo-img"> -->
                <span>10°</span>Semana Acadêmica
            </a>
        </h1>
        <div class="user-info">
            <% if (typeof user !=='undefined' ) { %>
                <div class="floating-btn" id="topBtn" title="Registrar Participação">
                    <i class="fa fa-plus"></i>
                </div>
                <span class="username">
                    <%= user.username %>
                </span>
                <a href="/dashboard" class="user-link">
                    <i class="fa fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/auth/logout" class="user-link logout-link">
                    <i class="fa fa-sign-out-alt"></i> Sair
                </a>
                <% } else { %>
                    <a href="/auth/login" class="login-btn">Login</a>
                    <% } %>
        </div>
    </nav>

    <header>
        <div class="container">
            <div class="breadcrumb">
                <a href="/">Início</a> &gt; <span>Eventos</span>
            </div>
        </div>
    </header>

    <div class="container">
        <% eventosAgrupados.forEach(grupo=> { %>
            <h2 class="page-title">
                <%= grupo.tipo.charAt(0).toUpperCase() + grupo.tipo.slice(1) %>
            </h2>
            <div class="evento-grid">
                <% grupo.eventos.forEach(evento=> { %>
                    <div class="evento-card">
                        <h3>
                            <%= evento.nome %>
                        </h3>
                        <p><strong>Descrição:</strong>
                            <%= evento.descricao %>
                        </p>
                        <p><strong>Data:</strong>
                            <%= new Date(evento.data).toLocaleDateString('pt-BR') %>
                        </p>
                        <p><strong>Horário:</strong>
                            <%= evento.horario %>
                        </p>
                        <p><strong>Local:</strong>
                            <%= evento.local %>
                        </p>
                        <p><strong>Pontos:</strong>
                            <%= evento.pontos %>
                        </p>
                        <% if (evento.users && evento.users.length> 0){ %>
                            <p><strong>Organizadores:</strong>
                                <%= evento.users %>
                            </p>
                            <% } %>
                    </div>
                    <% }) %>
            </div>
            <% }) %>
    </div>

    <footer>
        <div class=" footer-content">

            <!-- Informações do site -->
            <div class="footer-info">
                <h3>10° Semana Acadêmica</h3>
                <div class="footer-logo">
                    <a href="https://fsw-ifc.brdrive.net" target="_blank">
                        <img src="/img/favicon.svg" alt="Fábrica de Software">
                    </a>
                    <a href="https://videira.ifc.edu.br" target="_blank">
                        <img src="/img/ifc.webp" alt="IFC">
                    </a>
                </div>

            </div>

            <!-- Redes sociais -->
            <div class="footer-social">
                <h3>Siga-nos</h3>
                <ul>
                    <li><a href="https://www.instagram.com/fsw.ifcvideira/" target="_blank"><i
                                class="fab fa-instagram"></i></a></li>
                    <li>
                        <a href="mailto:fabricadesoftware.videira@ifc.edu.br" target="_blank"><i
                                class="fa fa-envelope"></i>
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>

</html>