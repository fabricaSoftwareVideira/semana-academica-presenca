<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Lista de Usuários - Semana Acadêmica</title>
    <style>
        .table-users {
            width: 100%;
            border-collapse: collapse;
            margin: 30px 0;
        }

        .table-users th,
        .table-users td {
            border: 1px solid #ddd;
            padding: 10px 12px;
            text-align: left;
        }

        .table-users th {
            background: var(--primary-color);
            color: #fff;
        }

        .table-users tr:nth-child(even) {
            background: #f9f9f9;
        }

        .table-users tr:hover {
            background: #f1f1f1;
        }
    </style>
</head>

<body>
    <nav>
        <h1>
            <a href="/" class="logo">
                <img src="/img/ifc.webp" alt="Logo" class="logo-img">
                Semana Acadêmica
            </a>
        </h1>
        <div class="user-info">
            <% if (typeof user !=='undefined' ) { %>
                <div class="floating-btn" id="topBtn" title="Registrar Participação">
                    <i class="fa fa-plus"></i>
                </div>
                <span class="username">
                    <%= user.username %>
                </span>
                <a href="/dashboard" class="user-link">
                    <i class="fa fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/auth/logout" class="user-link logout-link">
                    <i class="fa fa-sign-out-alt"></i> Sair
                </a>
                <% } else { %>
                    <a href="/auth/login" class="login-btn">Login</a>
                    <% } %>
        </div>
    </nav>
    <main>
        <div class="container">
            <div class="breadcrumb">
                <a href="/">Início</a> &gt; <span>Usuários</span>
            </div>
            <h1 class="page-title">Lista de Usuários</h1>
            <% if (typeof message !=='undefined' && message) { %>
                <div class="success-message">
                    <%= message %>
                </div>
                <%} else if (typeof error !=='undefined' && error) { %>
                    <div class="alert-message">
                        <%= error %>
                    </div>
                    <% } %>
                        <a href="/users/new" class="btn btn-primary">Novo
                            Usuário</a>
                        <table class="table-users">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Usuário</th>
                                    <th>Função</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(user) { %>
                                    <tr>
                                        <td>
                                            <%= user.id %>
                                        </td>
                                        <td>
                                            <%= user.username %>
                                        </td>
                                        <td>
                                            <%= user.role %>
                                        </td>
                                        <td>
                                            <a href="/users/<%= user.id %>/edit" class="btn-edit" title="Editar"><i
                                                    class="fa fa-edit"></i></a>
                                            <form action="/users/<%= user.id %>/delete" method="POST"
                                                style="display:inline;">
                                                <button type="submit" class="btn-delete" title="Excluir"
                                                    onclick="return confirm('Tem certeza que deseja excluir este usuário?');"><i
                                                        class="fa fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
        </div>
    </main>

    <footer>
        <div class="footer-content">

            <!-- Informações do site -->
            <div class="footer-info">
                <h3>10° Semana Acadêmica</h3>
                <div class="footer-logo">
                    <a href="https://fsw-ifc.brdrive.net" target="_blank">
                        <img src="/img/favicon.svg" alt="Fábrica de Software">
                    </a>
                    <a href="https://videira.ifc.edu.br" target="_blank">
                        <img src="/img/ifc.webp" alt="IFC">
                    </a>
                </div>

            </div>

            <!-- Redes sociais -->
            <div class="footer-social">
                <h3>Siga-nos</h3>
                <ul>
                    <li><a href="https://www.instagram.com/fsw.ifcvideira/" target="_blank"><i
                                class="fab fa-instagram"></i></a></li>
                    <li>
                        <a href="mailto:fabricadesoftware.videira@ifc.edu.br" target="_blank"><i
                                class="fa fa-envelope"></i>
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>

</html>