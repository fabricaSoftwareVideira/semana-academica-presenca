            align-items: center;
            gap: 8px;
            margin-bottom: 6px;
            cursor: pointer;
            padding: 5px 8px;
            border-radius: 5px;
            transition: background 0.2s;
        }

        #registroGroup label:hover {
            background: rgba(0, 0, 0, 0.03);
        }

        #registroGroup input[type="radio"] {
            accent-color: var(--primary-color);
        }

        #registroGroup .texto {
            font-weight: 500;
            color: #444;
        }

        /* #vitoriasContainer {
