# Configurações do Servidor
NODE_ENV=development
PORT=3000

# Configurações de JWT para gerar tokens para QRCode
JWT_SECRET=uma_chave_muito_segura_aqui
JWT_EXPIRATION=1y

# Configurações de Segurança CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
SKIP_RATE_LIMIT=true

# Logging de Segurança
SECURITY_LOGGING=false

# Session Secret (altere para um valor seguro em produção)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Flags
REGISTRO_PARTICIPACAO_ATIVO=true

# Link Even3
EVEN3_LINK=https://www.even3.com.br/10-semana-da-informatica-649259/

# Configurações de Produção (descomente quando necessário)
# NODE_ENV=production
# CORS_ORIGINS=https://semana-academica.ifc.edu.br,https://your-domain.com
